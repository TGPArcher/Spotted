<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <Spotted.StoryDef>
        <defName>SpottedByColonists</defName>
        <label>spotted by colonists</label>
        <storyKey>S.DetectedColonists</storyKey>
        <storyType>Spotted.Detected</storyType>
        <required>
            <li>
                <defType>ResearchProjectDef</defType>
                <defName>BasicScoutingTehniques</defName>
                <condition>researched</condition>
            </li>
            <li>
                <defType>ThingDef</defType>
                <defName>MotionScanner</defName>
                <condition>notpowered</condition>
            </li>
            <li>
                <defType>ThingDef</defType>
                <defName>SatelliteController</defName>
                <condition>notpowered</condition>
            </li>
        </required>
    </Spotted.StoryDef>

    <Spotted.StoryDef>
        <defName>SpottedByTech</defName>
        <label>spotted by technology</label>
        <storyKey>S.DetectedTech</storyKey>
        <storyType>Spotted.Detected</storyType>
        <optional>
            <li>
                <defType>ThingDef</defType>
                <defName>MotionScanner</defName>
                <condition>powered</condition>
            </li>
            <li>
                <defType>ThingDef</defType>
                <defName>SatelliteController</defName>
                <condition>powered</condition>
            </li>
        </optional>
    </Spotted.StoryDef>

</Defs>